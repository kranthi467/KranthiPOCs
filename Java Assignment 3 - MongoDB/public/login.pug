html
    head
        title Signin
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")
    body
        if(message)
            h4 #{message}
        a(href="/signup" class="btn btn-default" role="button") Sign Up?
        a(href="/login" class="btn btn-default" role="button") Log in?

        if(type == "login")
            form(action = "/login" method = "POST")
                div()
                    label(for="id") User Name:
                    input(name = "id" type = "text" required placeholder = "User Name")
                div()
                    label(for="password") Password:
                    input(name = "password" type = "password" required placeholder = "Password")
                button(type = "Submit" class="btn") Log in
        if(type == "signup") 
            form(action = "/signup" method = "POST")
                div()
                    label(for="username") User Name:
                    input(name = "id" type = "text" required placeholder = "User ID")
                div()
                    label(for="password") Password:
                    input(name = "password" type = "password" required placeholder = "Password")
                button(type = "Submit" class="btn") Sign me up!